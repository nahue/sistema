<% form_for @usuario, :html => {:class => "usuarios"} do |form| %>  
<%= form.error_messages %>

  <p>
    <%= form.label :username, "Nombre de usuario" %>
    <%= form.text_field :username, :class => "text"  %>
  </p>
  <p>
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, :class => "text"  %>
  </p>
  <p>
    <%= form.label :password, "Clave" %>
    <%= form.password_field :password, :class => "text"  %>
  </p>
  <p>
    <%= form.label :password_confirmation, "Confirmación de clave" %>
    <%= form.password_field :password_confirmation, :class => "text"  %>
  </p>
  <p>
    <%= form.submit "Enviar" %>
  </p>

<% end %>
